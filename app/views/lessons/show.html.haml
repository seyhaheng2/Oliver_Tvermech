.page-header
  = link_to lessons_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_lesson_path(@lesson), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit


%dl.dl-horizontal
  %dt Name:
  %dd= @lesson.name
  %dt Image:
  %dd= @lesson.image
  %dt Video:
  %dd= @lesson.video
  %dt Duration:
  %dd= @lesson.duration
  %dt Description:
  %dd= @lesson.description
  %dt Course:
  %dd= @lesson.course
  %dt User:
  %dd= @lesson.user
