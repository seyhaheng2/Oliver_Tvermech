
                <div class="pribox">
                    <% @les.each do |l| %>
                        <!-- start li container each post returned-->
                        <div class="refolioimg refolioimage logos isotope-item" id="demo1" style="transform: translate3d(0px, 0px, 0px);display:inline-block;">
                                            <!-- refolio img wrap-->
                            <div class="refolioimgwrap" style="background:url(<%= image_path(l.image)%>);width=70%; height=200px;display:inline-block;">
                            </div>                             

                            <div class="refoliosumm">
                                <h2><%= link_to truncate(l.name, length:20, class: "green") %></h2>
                                <hr style="width:80%; margin-left:10%;">
                                <p><%= truncate(l.description, length: 130) %></p>
                            </div>
                                <div class="refolio-share-buttons">
                                    <!-- Facebook -->
                                    <a href="http://www.facebook.com/sharer.php?u=http://www.nuvuthemes.com/ovogallery/yacht-store/" target="_blank" class="ref-facebook"><span class="icon-facebook"></span></a>

                                    <span class="icon-facebook"></span>
                                    <%= link_to '<span class="icon-facebook"></span>'.html_safe, root_path, class: "ref-facebook" %>

                                    <!-- Twitter -->
                                    <a href="http://twitter.com/share?url=http://www.nuvuthemes.com/ovogallery/yacht-store/&amp;text=Yacht%20Store" target="_blank" class="ref-twitter"><span class="icon-twitter"></span></a>

                                    <!-- Google+ -->
                                    <a href="https://plus.google.com/share?url=http://www.nuvuthemes.com/ovogallery/yacht-store/" target="_blank" class="ref-google"><span class="icon-googleplus"></span></a>
                                </div>
                        </div>
                    <% end %>
                </div> <!-- end refoliogallery -->
