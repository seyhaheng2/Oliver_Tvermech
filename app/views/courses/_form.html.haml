= form_for @course, :html => { :class => "form-horizontal" } do |f|
  -if @course.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"

      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, :class => 'col-sm-1 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :category, :class => 'col-sm-1 control-label'
    .col-sm-10
      = f.select :category_id, Category.all.map { |c| [c.name, c.id]}
  .form-group
    .col-sm-offset-1.col-sm-10
      = f.submit :class => 'btn btn-primary'
